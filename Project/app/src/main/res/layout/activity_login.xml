<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/chat_synergykit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loginImageHeight"
        android:contentDescription="@string/login_enter_chat_synergykit"
        android:src="@drawable/ic_synergykit" />

    <ImageView
        android:id="@+id/chat_firebase"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loginImageHeight"
        android:contentDescription="@string/login_enter_chat_firebase"
        android:src="@drawable/ic_firebase" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/loginFacebookMarginBottom"
        android:layout_marginTop="@dimen/loginFacebookMarginBottom" />

</LinearLayout>
